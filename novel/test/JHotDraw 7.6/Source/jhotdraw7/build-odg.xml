<?xml version="1.0" encoding="UTF-8"?>
<project name="build-odg" default="all" basedir=".">
    <target name="init">
        <property name="libdir" value="lib"/>
        <property name="srcdir" value="src/main/java"/>
        <property name="builddir" value="build"/>
        <property name="classdir" value="${builddir}/classes"/>
        <property name="distdir" value="dist/Samples/ODG"/>

        <!-- properties for copyright and versioning -->
        <property name="author" value="the authors and contributors of JHotDraw"/>
        <property name="version" value="7.6"/>

        <!-- properties for jar signing -->
        <property name="keystore.file" value="../../../../_Keystore/JavaKeystore"/>
        <property name="keystore.alias" value="werner"/>
        <property name="keystore.storepass" value="werner"/>
    </target>
    <target name="clean" depends="init">
        <delete dir="${classdir}" />
    </target>
    <target name="applet.compile" depends="init,clean">
        <mkdir dir="${classdir}"/>
        <javac
                destdir="${classdir}"
                srcdir="${srcdir}"
                debug="false"
                optimize="true"
                encoding="UTF-8"
         >
            <classpath path="${libdir}/java_30.zip"/>
            <classpath path="${libdir}/annotations.jar"/>
            <classpath path="${libdir}/jsr305.jar"/>
            <include name="org/jhotdraw/samples/odg/ODGApplet.java"/> 
            <include name="net/n3/nanoxml/*.java"/> 
        </javac>
        <copy todir="${classdir}/org/jhotdraw/app/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/app/action/images">
                <include name="edit*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/draw/action/images" >
                <include name="actions.png"/>
                <include name="align*.png"/>
                <include name="attribute*.png"/>
                <include name="createEllipse.png"/>
                <include name="createImage.png"/>
                <include name="createLine.png"/>
                <include name="createPolygon.png"/>
                <include name="createRectangle.png"/>
                <include name="createScribble.png"/>
                <include name="createText.png"/>
                <include name="createTextArea.png"/>
                <include name="move*.png"/>
                <include name="selection*.png"/>
                <include name="show*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo">
            <fileset dir="${srcdir}/org/jhotdraw/undo">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo/images">
            <fileset dir="${srcdir}/org/jhotdraw/undo/images">
                <include name="*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw">
            <fileset file="${srcdir}/org/jhotdraw/draw/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset file="${srcdir}/org/jhotdraw/app/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/samples/odg">
            <fileset file="${srcdir}/org/jhotdraw/samples/odg/Label*.properties"/>
        </copy>
    </target>
    <target name="applet.jar" depends="init,applet.compile">
        <mkdir dir="${distdir}/unsigned"/>
        <jar destfile="${distdir}/unsigned/jhotdraw_odg.jar" basedir="${classdir}"
        index="true" compress="false">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.odg.ODGApplet"/>
                <attribute name="Implementation-Version" value="${version}"/>
            </manifest>
        </jar>
        <exec executable="gzip" dir="${distdir}/unsigned">
            <arg value="-f"/>
            <arg value="jhotdraw_odg.jar"/>
        </exec>
        <jar destfile="${distdir}/unsigned/jhotdraw_odg.jar" basedir="${classdir}" index="true">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.odg.ODGApplet"/>
            </manifest>
        </jar>
        <exec executable="pack200">
            <arg value="${distdir}/unsigned/jhotdraw_odg.jar.pack.gz"/>
            <arg value="${distdir}/unsigned/jhotdraw_odg.jar"/>
        </exec>
    </target>
    <target name="applet.jarsigned" depends="init,applet.jar">
        <mkdir dir="${distdir}/signed"/>
        <copy tofile="${distdir}/signed/jhotdraw_odg.jar">
            <fileset file="${distdir}/unsigned/jhotdraw_odg.jar"/>
        </copy>
        <exec executable="pack200">
            <arg value="-r"/>
            <arg value="${distdir}/signed/jhotdraw_odg.jar"/>
        </exec>
          <signjar alias="${keystore.alias}" 
                storepass="${keystore.storepass}"
                keystore="${keystore.file}" 
                jar="${distdir}/signed/jhotdraw_odg.jar"
                >
        </signjar>        
        <exec executable="pack200">
            <arg value="${distdir}/signed/jhotdraw_odg.jar.pack.gz"/>
            <arg value="${distdir}/signed/jhotdraw_odg.jar"/>
        </exec>
    </target>
    <target name="application.compile" depends="init,clean">
        <mkdir dir="${classdir}"/>
        <javac
                destdir="${classdir}"
                srcdir="${srcdir}"
                debug="true"
                optimize="true"
                encoding="UTF-8"
         >
            <classpath path="${libdir}/quaqua.jar"/>
            <classpath path="${libdir}/java_30.zip"/>
            <classpath path="${libdir}/annotations.jar"/>
            <classpath path="${libdir}/jsr305.jar"/>
            <include name="org/jhotdraw/samples/odg/Main.java"/>
            <include name="org/jhotdraw/samples/odg/DrawProject.java"/> 
            <include name="net/n3/nanoxml/*.java"/> 
        </javac>
        <copy todir="${classdir}/org/jhotdraw/app/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/app/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset dir="${srcdir}/org/jhotdraw/app">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/draw/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo">
            <fileset dir="${srcdir}/org/jhotdraw/undo">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo/images">
            <fileset dir="${srcdir}/org/jhotdraw/undo/images">
                <include name="*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset file="${srcdir}/org/jhotdraw/app/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw">
            <fileset file="${srcdir}/org/jhotdraw/draw/Label*.properties"/>
        </copy> 
        <copy todir="${classdir}/org/jhotdraw/gui">
            <fileset file="${srcdir}/org/jhotdraw/gui/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/samples/odg">
            <fileset file="${srcdir}/org/jhotdraw/samples/odg/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/samples/svg">
            <fileset file="${srcdir}/org/jhotdraw/samples/svg/Label*.properties"/>
        </copy>
    </target>
    <target name="application.jar" depends="init,application.compile">
        <mkdir dir="${distdir}/unsigned"/>
        <jar destfile="${distdir}/unsigned/JHotDraw ODG.jar" basedir="${classdir}">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.odg.Main"/>
                <attribute name="Class-Path" value="quaqua.jar lib/quaqua.jar ../lib/quaqua.jar ../../lib/quaqua.jar"/>
                <attribute name="Implementation-Version" value="${version}"/>
            </manifest>
        </jar>
        <copy todir="${distdir}/unsigned">
            <fileset file="${libdir}/*.jnilib"/>
        </copy>
    </target>
    <target name="application.jarsigned" depends="init,application.jar">
        <mkdir dir="${distdir}/signed"/>
        <unjar src="${libdir}/quaqua.jar" dest="${classdir}" />
        <jar destfile="${distdir}/signed/JHotDraw ODG.jar" basedir="${classdir}">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.odg.Main"/>
                <attribute name="Implementation-Version" value="${version}"/>
            </manifest>
        </jar>
        <exec executable="pack200">
            <arg value="-r"/>
            <arg value="${distdir}/signed/JHotDraw ODG.jar"/>
        </exec>
          <signjar alias="${keystore.alias}" 
                storepass="${keystore.storepass}"
                keystore="${keystore.file}" 
                jar="${distdir}/signed/JHotDraw ODG.jar"
                
                >
        </signjar>        
        <jar basedir="${libdir}" compress="true"
             jarfile="${distdir}/signed/libquaqua.jnilib.jar"
             >
            <include name="libquaqua.jnilib"/>
        </jar>
        <signjar alias="${keystore.alias}" 
            storepass="${keystore.storepass}"
            keystore="${keystore.file}" 
            jar="${distdir}/signed/libquaqua.jnilib.jar"
            >
        </signjar>        
        <jar basedir="${libdir}" compress="true"
             jarfile="${distdir}/signed/libquaqua64.jnilib.jar"
             >
            <include name="libquaqua64.jnilib"/>
        </jar>
        <signjar alias="${keystore.alias}" 
            storepass="${keystore.storepass}"
            keystore="${keystore.file}" 
            jar="${distdir}/signed/libquaqua64.jnilib.jar"
            >
        </signjar>        
    </target>
    <target name="application.run-jar" depends="init">
        <java fork="true" jar="${distdir}/JHotDraw ODG.jar">
            <jvmarg value="-Xdock:name=JHotDraw ODG"/>
            <jvmarg value="-Dlocale=en"/>
            <jvmarg value="-Dapple.awt.graphics.UseQuartz=false"/>
            <jvmarg value="-Djava.library.path=${libdir}"/>
            <jvmarg value="-Xmx256M"/>
        </java>
    </target>
    <target name="application.run-compiled" depends="init">
        <java fork="true" classname="org.jhotdraw.samples.odg.Main">
            <classpath>
                <pathelement path="${classdir}"/>
                <pathelement path="${libdir}/quaqua.jar"/>
                <pathelement path="${libdir}/java_30.zip"/>
            </classpath>
            <jvmarg value="-Xdock:name=JHotDraw ODG"/>
            <jvmarg value="-Dlocale=en"/>
            <jvmarg value="-Dapple.awt.graphics.UseQuartz=false"/>
            <jvmarg value="-Djava.library.path=${libdir}"/>
            <jvmarg value="-Xmx256M"/>
        </java>
    </target>
    <target name="applet.run-jar" depends="init">
        <java fork="true" jar="${distdir}/unsigned/jhotdraw_odg.jar"/>
    </target>
    <target name="applet.run-compiled" depends="init">
        <java fork="true" classname="org.jhotdraw.samples.odg.ODGApplet">
            <classpath>
                <pathelement path="${classdir}"/>
            </classpath>
        </java>
    </target>
    <target name="applet.appletviewer" depends="init">
        <exec executable="appletviewer">
        <arg value="${builddir}/ODGApplet.html"/>
        </exec>
    </target>
    <target name="dist" depends="init,applet.jar,application.jar">
    </target>
    <target name="distsigned" depends="init,applet.jarsigned,application.jarsigned">
    </target>
</project>
